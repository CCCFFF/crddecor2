
<div class="row">
<div class="col-md-12">
  <div class="page-header">
   <h2><%= home.name %>

    <small><%= home.city%>,<%= home.state %></small></h2>
   </div>
    <%= link_to "Edit Home", edit_home_url(home.id), :class => "btn-info btn-xs" %> <%= link_to "Add Home Picture", new_home_picture_url, :class => "btn btn-info btn-xs" %>  <%= link_to "Add New Space", new_space_url, :class => "btn-info btn-xs" %>
  <h4>Spaces for <%= "#{home.name}" %></h4>

      <% home.spaces.each do |the_space| %>

          <div class="col-md-4">
            <%= render '/spaces/space', :space => the_space %>
          </div>

        <% end %>

</div>
</div>

