<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @space_categories.each do |space_category| %>
      <tr>
        <td><%= space_category.name %></td>
        <td><%= link_to 'Show', space_category %></td>
