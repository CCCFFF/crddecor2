<h1>Listing spaces</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Category</th>
      <th>Size</th>
      <th>Home</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <% pic = SpacePicture.find_by(:space_id => space.id) %>
        <td><%= image_tag pic.source %></td>
        <td><%= space.name %></td>
        <td><%= space.category %></td>
        <td><%= space.size %></td>
        <%= house = Home.find_by(:id => space.home_id) %>
        <td><%= house.name %></td>
        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

