<p id="notice"><%= notice %></p>
<div>
  <%= link_to "Edit Profile", edit_user_path(@user), :class => 'btn btn-primary' %>
  <%= link_to "Add New Home", new_home_url, :class => "btn btn-primary" %>
</div>
<div class="container">
  <div class="page-header">
  <h1>My Property</h1>
</div>
<div class="row">
  <div class="col-lg-12">
    <ul style="list-style: none;">
      <% @user.homes.each do |the_home| %>
          <%= render '/homes/home', :home => the_home %>
          <br>
          <h4>Spaces for <%= "#{the_home.name}" %></h4>
          <br>
          <div class="col-lg-4">
              <ul style="list-style: none;">
                <% the_home.spaces.each do |the_space| %>

                      <%= render '/spaces/space', :space => the_space %>

                      <h3>Pictures to <%= "#{the_space.name}" %></h3> <%= link_to "Add Picture", new_space_picture_url, :class => "btn btn-info btn-xs" %>
              </ul>

              <ul style="list-style: none;">
                    <% the_space.space_pictures.each do |the_space_pic| %>
                          <%= render '/space_pictures/space_picture', :space_pic => the_space_pic %>

                </ul>
                <br>
                <h5>Thoughts for <%= "#{the_space_pic.name}" %></h5>
                <br>
                <ul style="list-style: none;">
                  <% the_space_pic.thoughts.each do |the_thought| %>

                    <%= render '/thoughts/thought', :thought => the_thought %>
                  </div>
                  <div class="clear"></div>
                  <% end %>
          <% end %>
          <% end %>
        </ul>
      <% end %>
  </ul>
</div>
</div>
</div>

